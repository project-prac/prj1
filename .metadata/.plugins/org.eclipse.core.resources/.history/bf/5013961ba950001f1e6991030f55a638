package com.sd.hotel.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.scheduling.annotation.EnableScheduling;

import com.sd.hotel.scheduler.RemoveBlogImageScheduler;
import com.sd.hotel.scheduler.RemoveTempFilesScheduler;

@EnableScheduling
@Configuration
public class TaskConfig {
	@Bean
	RemoveBlogImageScheduler removeBlogImageTask() {
		return new RemoveBlogImageScheduler();
	}
	@Bean
	RemoveTempFilesScheduler removeTempFileTask() {
		return new RemoveTempFilesScheduler();
	}
}